<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="dawidborkowski.dawidborkowski.HelloController">
    <Label text="Nazwa użytkownika:" GridPane.rowIndex="0" />
    <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Hasło:" GridPane.rowIndex="1" />
    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button onAction="#handleLogin" text="Zaloguj" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</GridPane>
